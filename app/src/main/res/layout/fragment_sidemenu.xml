<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99eeeeee"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingEnd="@dimen/sidemenu_space_end"
            android:paddingStart="@dimen/sidemenu_space_start"
            android:paddingTop="@dimen/sidemenu_space_top"
            >

        <android.support.v7.widget.RecyclerView
                android:id="@+id/list_location_memos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/card_location_memo"
                />

    </LinearLayout>
</layout>
